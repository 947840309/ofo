/* pages/index3/index.wxss */
view{
  width: 100%;
}
.wrapper{
  background-color: #f2f2f2;
}
.head{
  height: 100rpx;
  padding-left: 50rpx;
}
.head>text{
  line-height: 100rpx;
  font-size: 15px;
}
.option{
  height: 600rpx;
  padding-top: 40rpx;
  background-color: #fff;
}
.group{
  width: 100%;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}
.check-box{
  width: 250rpx;
  height: 100rpx;
  border: 1px solid #b9dd08;
  border-radius: 8px;
  text-align: center;
  line-height: 100rpx;
  margin: 0 40rpx;
}
.oImg{
  width: 100%;
  background-color: #fff;
}
.oImg-title{
  display: block;
  height: 100rpx;
  background-color: #f2f2f2;
  line-height: 100rpx;
  padding-left: 40rpx;
}
.photo{
  display: inline-block;
  width: 150rpx;
  height: 150rpx;
  margin: 20rpx;
  margin-right: 10rpx;
}
.photo image{
  display: block;
  position: relative;
  width: 100%;
  height: 100%;
  overflow: visible;
}
icon{
  position: absolute;
  top: 0;
  right: 0;
  margin-right: -8px;
  margin-top: -8px;
}
.img-text{
  display: inline-block;
  width: 150rpx;
  height: 150rpx;
  text-align: center;
  line-height: 150rpx;
  font-size: 13px;
  border: 2px dashed #999;
  vertical-align: top;
  margin: 20rpx;
}
.num{
  margin: 30rpx 0;
}
input{
  display: block;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #fff;
  padding: 0 40rpx;
}
.put1{
  border-bottom: 2px solid #f2f2f2;
}
button{
  width: 80%;
  margin-bottom: 30rpx;
}
