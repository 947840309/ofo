/* pages/index4/index.wxss */
.wrapper{
  width: 100%;
  height: 100vh;
  background-color: #f2f2f2;
}
.user{
  width: 100%;
  padding: 80rpx 0;
  text-align: center;
  background-color: #fff;
}
image{
  display: inline-block;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}
.name{
  display: block;
  margin-top: 40rpx;
  height: 80rpx;
  font-size: 18px;
  line-height: 80rpx;
}
.money{
  height: 100rpx;
  margin-top: 20rpx;
  background-color: #fff;
  font-size: 18px;
  line-height: 100rpx;
  padding: 0 40rpx;
}
.money>text{
  font-size: 20px;
  float: right;
}
button{
  position: absolute;
  bottom: 50rpx;
  left: 50%;
  transform: translate(-50%);
  width: 90%;

}