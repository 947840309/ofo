/* pages/index5/index.wxss */
.wrapper{
  width: 100%;
  height: 100vh;
  background-color: #f2f2f2;
}
.money{
  width: 100%;
  text-align: center;
  padding: 40rpx 0;
  background-color: #fff;
}
.money text{
  display: block;
  font-size: 13px; 
  margin-bottom: 30rpx;
}
.money text.tow{
 font-size: 60px;
 font-weight: bold;
}
.money text.three{
  margin: 0 auto 0;
  border: 1px solid black;
  border-radius: 20px;
  height: 50rpx;
  width: 200rpx;
  line-height: 50rpx;
}
button{
  background-color: #b9dd08;
  width: 90%;
  margin: 40rpx auto;
}
.detil{
  font-size: 18px;
}
.detil view{
  background-color: #fff;
  height: 100rpx;
  padding: 0 40rpx;
  line-height: 100rpx;
}
.detil view>text{
  float: right;
}
.detil view:first-child{
  margin-bottom: 10rpx;
}
.detil view:nth-of-type(2) .yj{
  color: #b9dd08;
}
.detil view:last-child{
  margin-top: 40rpx;
  height: 150rpx;
  line-height: 150rpx;
}